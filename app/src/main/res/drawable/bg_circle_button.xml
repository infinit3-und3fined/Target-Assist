<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <!-- Main circle with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:endColor="#1A237E"
                android:startColor="#3949AB"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>
    <!-- Inner cutting effect -->
    <item
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>
</layer-list> 