<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <!-- Top Bar with App Title and Settings -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/component_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Device Info Panel with CardView for shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/device_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <include
            android:id="@+id/device_info_panel"
            layout="@layout/component_device_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <!-- Aim Precision Text -->
    <TextView
        android:id="@+id/aim_precision_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/aim_with_precision"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/device_info_card" />

    <!-- Checkmark Icon -->
    <ImageView
        android:id="@+id/checkmark_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_checkmark"
        app:layout_constraintBottom_toBottomOf="@id/aim_precision_text"
        app:layout_constraintEnd_toStartOf="@id/aim_precision_text"
        app:layout_constraintTop_toTopOf="@id/aim_precision_text" />

    <!-- Aim Circle -->
    <include
        android:id="@+id/aim_circle"
        layout="@layout/component_aim_circle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/start_service_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aim_precision_text"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Start Service Button Text -->
    <TextView
        android:id="@+id/start_service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/start_service"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aim_circle" />

    <!-- Start Service Button -->
    <include
        android:id="@+id/start_service_button"
        layout="@layout/component_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintTop_toBottomOf="@id/start_service_text" />

    <!-- Bottom Bar -->
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/component_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 